<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr">
                <h2>
                    Nueva Requisicion <span class="fw-300"><i>DOTDCD - ERP</i></span>
                </h2>
                <div class="panel-toolbar">
                    <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10"
                        data-original-title="Collapse"></button>
                    <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip"
                        data-offset="0,10" data-original-title="Fullscreen"></button>
                    <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10"
                        data-original-title="Close"></button>
                </div>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <div id="metasAll">
                        <div class="container-fluid">
                            <div class="row">
                                    <!-- Formulario  -->
                                    <form class="form-group" method="post"
                                        action="/updRequisicion/{{r.requisicion_id}}">
                                        <label class="form-label col-12" for="simpleinput">
                                            <h3 class="text-center">Nueva Requisicion</h3>
                                        </label><br /><br /><br />


                                        <div class="row">
                                            <div class="col-md-6">
                                                <span>Tipo de requisicion</span>
                                        <select name="tipo_id" id="tipo_requisicion" onchange="cambio()" class="form-control">
                                            <option value="0">Proyecto</option>
                                            <option value="1">Listado de Productos</option>
                                        </select><br /><br />

                                        <div id="requisicion_reemplazar">
                                            <span id="requisicion_reemplazar">Requisicion a Reemplazar</span>
                                        <select name="requisicion_id_remplazada" id="requisicion_reemplazar" class="form-control" id="">
                                            <option value="" selected> </option>
                                            {{#each requisiciones}}
                                            <option value="{{requisicion_id}}">{{requisicion_comentarios}}</option>
                                            {{/each}}
                                        </select><br /><br />
                                        </div>

                                        <span>Cliente</span>
                                        <select name="" id="" id="mySelect" class="form-control" >
                                            {{#each clientes}}
                                            <option value="{{cliente_id}}">{{cliente_razon_social}}</option>
                                            {{/each}}
                                        </select><br /><br />

                                        <span>Proyecto / Cotizacion</span>
                                        <select name="requisicion_cotizacion_id" id="" class="form-control">
                                            {{#each cotizaciones}}
                                            <option value="{{cotizacion_id}}">{{cotizacion_descripcion}}</option>
                                            {{/each}}
                                        </select><br />

                                            </div>

                                            <div class="col-md-6">
                                                <span>Inversion</span>
                                        <select name="requisicion_inversion_id" id="" class="form-control">
                                            {{#each inversion}}
                                            <option value="{{inversion_id}}">{{inversion_descripcion}}</option>
                                            {{/each}}
                                        </select><br />

                                        <span>Familia / Disciplina</span>
                                        <select name="requisicion_diciplina_id" id="" class="form-control">
                                            {{#each familias}}
                                            <option value="{{familia_id}}">{{familia_descripcion}}</option>
                                            {{/each}}
                                        </select><br />

                                        <span>Empleado Solicitante</span>
                                        <select name="requisicion_empleado_id" id="" class="form-control">
                                            {{#each empleados}}
                                            <option value="{{empleado_id}}">{{nombre_completo}}</option>
                                            {{/each}}
                                        </select><br />

                                        <span>Fecha</span>
                                        <input type="date" class="form-control" name="requisicion_fecha"><br />

                                        <span>Comentarios</span>
                                        <input type="text" class="form-control" placeholder="Comentarios" name="requisicion_comentarios"><br />
                                            </div>
                                        </div>

                                        

                                        <br><br>
                                        <button type="submit"
                                            class="btn-outline-info btn-lg btn-block ">Agregar</button>
                                    </form>
                                    
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


{{#section 'scripts'}}
<script>
    var select1 = document.getElementById("tipo_requisicion");
        var input = document.getElementById("requisicion_reemplazar");
            input.style.display = "none";

function cambio(){
    

        if(select1.value == 0){
            input.style.display = "none";
        }else if(select1.value == 1){
            input.style.display = "block";
        }
}
</script>

{{/section}}