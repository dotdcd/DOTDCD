                                    <label class="form-label col-12" for="simpleinput">
                                        <h3 class="text-center">Editar Producto o Servicio</h3>
                                    </label><br /><br /><br />
                                    <form class="form-group container-fluid" method="post" action="/addProducto">

                                        <div class="row">
                                            <div class="col-md-4">
                                                <span>Descripcion</span>
                                                <input type="text" id="simpleinput" class="form-control" placeholder=""
                                                    name="producto_descripcion"
                                                    value="{{producto.producto_descripcion}}" autofocus><br />

                                                <span>CÃ³digo</span>
                                                <input type="text" id="simpleinput" class="form-control"
                                                    value="{{producto.producto_codigo}}" placeholder=""
                                                    name="producto_codigo"><br />

                                                <span>Tipo</span>

                                                <select name="producto_tipo_id" class="form-control" id="">
                                                    {{#each tipo}}
                                                    <option value="{{tipo_id}}" {{#if (is ../producto.producto_tipo_id
                                                        this.tipo_id) }} selected {{/if}}>{{tipo_descripcion}}</option>
                                                    {{/each}}
                                                </select><br />

                                                <span>Tipo de Material</span>
                                                <select name="producto_material_tipo" class="form-control" id="">
                                                    {{#each material}}
                                                    <option value="{{tm_id}}" {{#if (is
                                                        ../producto.producto_material_tipo this.tm_id) }} selected
                                                        {{/if}}>{{tm_tipo}}</option>
                                                    {{/each}}
                                                </select><br />

                                                <span>Familia / Disciplina</span>
                                                <select name="producto_familia_id" class="form-control" id="">

                                                    {{#each familia}}
                                                    <option value="{{familia_id}}" {{#if (is
                                                        ../producto.producto_familia_id this.familia_id) }} selected
                                                        {{/if}}>{{familia_descripcion}}</option>
                                                    {{/each}}
                                                </select><br />
                                            </div>

                                            <div class="col-md-4">
                                                <span>Dispositivo</span>
                                                <select name="dispositivo_id" class="form-control" id="">

                                                    {{#each dispositivo}}
                                                    <option value="{{dispositivo_id}}" {{#if (is
                                                        ../producto.dispositivo_id this.dispositivo_id) }} selected
                                                        {{/if}}>{{descripcion}}</option>
                                                    {{/each}}
                                                </select><br />

                                                <span>Modelo</span>
                                                <input type="text" class="form-control" name="producto_modelo"
                                                    value="{{producto.producto_modelo}}"><br />

                                                <span>Marca</span>
                                                <select name="producto_marca_id" id="" class="form-control">
                                                    {{#each marca}}
                                                    <option value="{{marca_id}}" {{#if (is ../producto.producto_marca_id
                                                        this.marca_id) }} selected {{/if}}>{{marca_descripcion}}
                                                    </option>
                                                    {{/each}}
                                                </select><br />

                                                <span>Unidad</span>

                                                <select id="unidad_id" name="producto_unidad_id" class="form-control">
                                                    {{#each unidad}}
                                                    <option value="{{unidad_id}}" {{#if (is
                                                        ../producto.producto_unidad_id this.unidad_id) }} selected
                                                        {{/if}}>{{unidad_descripcion}}</option>
                                                    {{/each}}
                                                </select><br>

                                                <span>Maneja Series</span>
                                                <select name="producto_serie_id" class="form-control" id="">

                                                    {{#each serie}}
                                                    <option value="{{serie_id}}" {{#if (is ../producto.producto_serie_id
                                                        this.serie_id) }} selected {{/if}}>{{serie_descripcion}}
                                                    </option>
                                                    {{/each}}
                                                </select> <br>



                                            </div>
                                            <div class="col-md-4">
                                                <span>Moneda</span>
                                                <select name="producto_moneda_id" id="" class="form-control">

                                                    {{#each moneda}}

                                                    <option value="{{moneda_id}}" {{#if (is
                                                        ../producto.producto_moneda_id this.moneda_id) }} selected
                                                        {{/if}}>{{moneda_descripcion}}</option>
                                                    {{/each}}

                                                </select><br />
                                                <span>Costo de Compra</span>
                                                <input type="text" class="form-control" name="producto_costo"
                                                    value="{{producto.producto_costo}}"><br />

                                                <span>Fecha de Costo</span>
