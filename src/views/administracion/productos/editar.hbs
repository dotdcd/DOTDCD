                                            <th id="ventaf" style="color: green;"></th>

                                        </tr>

                                        
                                    </table>
                                </div>





                                <br><br>
                                <div class="col-md-2"></div>
                                
                                <div class="col-md-4">
                                    <button type="submit" class="btn-outline-info btn-lg btn-block ">Agregar
                                        Producto / Servicio</button>

                                </div>
                                </form>
                                <div class="col-md-4">
                                    <a href="/dashboard/administracion/productos/buscar"><button type="button"
                                        class="btn-outline-danger btn-lg btn-block ">Cancelar</button></a>
                                </div>
                                <div class="col-md-2"></div>

                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



