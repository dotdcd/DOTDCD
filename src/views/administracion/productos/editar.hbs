    function roundToTwo(value) {
        if (parseFloat(value) > 0) {
            return (Math.round(value * 100) / 100);
            console.log(value);
        } else {
            return 0.00;
        }
        console.log(value);
    }


    document.getElementById('datePicker').valueAsDate = new Date();


    const familias = {{{ json familia }}}
    const tipoa = {{{ json tipo }}}

    function codigo() {
